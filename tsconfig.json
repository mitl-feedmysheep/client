      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@screens/*": ["screens/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
